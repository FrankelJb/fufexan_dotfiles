(defwidget sys-indicator [property value tooltip]
  (eventbox
    :tooltip tooltip
    (box
      :orientation "v"
      :space-evenly false
      :class "sys-indicator module"
      (label
        :class "text property"
        :text property)
      (label
        :class "text value"
        :text "${value}%"))))


(defvar GB 1024000000)
(defvar MB 1024000)
